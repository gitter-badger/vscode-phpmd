{
  "name": "vscode-phpmd",
  "description": "VSCode plugin for PHP Mess Detector",
  "author": "Sandhj√© Bouw",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "Ecodes.io",
  "engines": {
    "vscode": "^1.8.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./out/client",
  "contributes": {
    "commands": [{
        "command": "phpmd.run",
        "title": "Run PHPMD"
    }],
    "configuration": {
      "type": "object",
      "title": "PHP Mess Detector configuration",
      "properties": {
        "phpmd.location": {
          "type": "string",
          "default": "",
          "description": "The location of the phpmd executable"
        },
        "phpmd.rules": {
          "type": "string",
          "default": "cleancode,codesize,controversial,design,unusedcode,naming",
          "description": "Phpmd ruleset"
        },
        "phpmd.configurationFile": {
          "type": "string",
          "default": "",
          "description": "Phpmd configuration file (overwrites 'phpmd.rules' if not empty)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "typescript": "^2.1.4",
    "vscode": "^1.0.3"
  },
  "dependencies": {
    "vscode-languageclient": "^2.6.3"
  }
}
