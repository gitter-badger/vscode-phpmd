{
  "name": "vscode-phpmd",
  "description": "VSCode plugin for PHP Mess Detector",
  "author": "Sandhj√© Bouw",
  "license": "MIT",
  "version": "0.4.0",
  "publisher": "ecodes",
  "engines": {
    "vscode": "^1.8.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./out/client",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "PHP Mess Detector configuration",
      "properties": {
        "phpmd.command": {
          "type": "string",
          "default": "",
          "description": "The phpmd command. Leave empty to use the shipped phpmd phar (local php executable is required)"
        },
        "phpmd.rules": {
          "type": "string",
          "default": "cleancode,codesize,controversial,design,unusedcode,naming",
          "description": "Phpmd ruleset (comma separated list of rulesets or the location of a config file)"
        },
        "phpmd.verbose": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "typescript": "^2.1.4"
  },
  "dependencies": {
    "vscode": "^1.0.3",
    "vscode-languageclient": "^2.6.3"
  }
}
